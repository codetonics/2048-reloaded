<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrainGame.Resources">

    <Style x:Key="NavigationBackButtonNormalStyle" TargetType="Button" />
    <Style x:Key="NavigationBackButtonSmallStyle" TargetType="Button" />

    <Style x:Key="BackButtonNormalStyle" TargetType="Button" />
    <Style x:Key="BackButtonSmallStyle" TargetType="Button" />

    <Style x:Key="MinimisedCommandBar" TargetType="CommandBar">
        <Setter Property="ClosedDisplayMode" Value="Minimal" />
    </Style>

    <Thickness x:Key="GameMargin">12,0,12,12</Thickness>

</ResourceDictionary>